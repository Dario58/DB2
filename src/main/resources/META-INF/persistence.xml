<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="DB2">

        <class>it.polimi.db2.entities.AlertEntity</class>
        <class>it.polimi.db2.entities.BundleEntity</class>
        <class>it.polimi.db2.entities.EmployeeEntity</class>
        <class>it.polimi.db2.entities.OptionalProductEntity</class>
        <class>it.polimi.db2.entities.OrderEntity</class>
        <class>it.polimi.db2.entities.ServiceEntity</class>
        <class>it.polimi.db2.entities.ServiceActivationScheduleEntity</class>
        <class>it.polimi.db2.entities.UserEntity</class>
        <class>it.polimi.db2.entities.ValidityPeriodEntity</class>
        <properties>
            <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/db2_project"/>
            <property name="toplink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/db2_project"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/db2_project"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.cj.jdbc.Driver"/>
            <property name="eclipselink.jdbc.url" value="jdbc:mysql://localhost:3306/db2_project"/>
            <property name="eclipselink.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>
